// Mock Payments
model MockPayment {
    id       String          @id @default(cuid())
    userPiId String
    type     MockPaymentType
    // Status
    status   PaymentStatus   @default(PENDING)

    // Pi Network Integration
    amount      Decimal
    piTxId      String?
    piPaymentId String?

    // time
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("mock_payments")
}

enum MockPaymentType {
    MAINNET_WALLET
}
